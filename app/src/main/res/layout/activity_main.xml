<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnPausePlay_name"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/btnReward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnReward_name"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/btnVolumeUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnVolumeUp_name"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="182dp" />

    <Button
        android:id="@+id/btnVolumeDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnVolumeDown_name"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="279dp" />

    <Button
        android:id="@+id/btnForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnForward_name"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/btnOffPC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnOffPC_name"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="52dp" />

</android.support.constraint.ConstraintLayout>